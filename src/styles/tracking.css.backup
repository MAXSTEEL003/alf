  margin-top: var(--space-sm);
  word-break: break-all;
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
}

/* ============================================
   LOADING STATES
   ============================================
*/

.loading-spinner {
  text-align: center;
  padding: clamp(3rem, 6vw, 5rem);
  color: var(--text-light);
  font-size: clamp(1rem, 2.5vw, 1.25rem);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-md);
}

.loading-spinner::before {
  content: '';
  width: clamp(20px, 4vw, 32px);
  height: clamp(20px, 4vw, 32px);
  border: 3px solid rgba(0, 212, 170, 0.2);
  border-top: 3px solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* ============================================
   ANIMATIONS
   ============================================
*/

@keyframes shimmer {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}

@keyframes shimmer-line {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}

/* ============================================
   SCROLLBAR STYLING
   ============================================
*/

::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.05);
  border-radius: var(--radius-sm);
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, 
    var(--primary-color) 0%, 
    var(--accent-color) 100%);
  border-radius: var(--radius-sm);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(135deg, 
    var(--primary-light) 0%, 
    var(--accent-color) 100%);
}

/* ============================================
   RESPONSIVE DESIGN
   ============================================
*/

@media (max-width: 768px) {
  .share-view-container {
    padding: clamp(1.5rem, 4vw, 2rem) clamp(0.75rem, 2vw, 1rem);
  }

  .share-card {
    padding: clamp(1.5rem, 4vw, 2rem);
    border-radius: clamp(0.75rem, 2vw, 1.25rem);
  }

  .share-header {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-md);
    text-align: left;
  }

  .shipment-path {
    flex-direction: column;
    gap: clamp(1rem, 3vw, 1.5rem);
    text-align: center;
  }

  .path-line {
    width: 3px;
    height: clamp(40px, 8vw, 60px);
    margin: 0;
  }

  .progress-indicator {
    width: 100%;
    height: 50%;
  }

  .progress-indicator.complete {
    height: 100%;
  }

  .order-list {
    gap: var(--space-md);
  }

  .order-list li {
    padding: clamp(1rem, 3vw, 1.5rem);
  }

  .order-detail {
    padding: clamp(1.25rem, 3vw, 1.75rem);
  }

  .order-info {
    grid-template-columns: 1fr;
  }

  .form-inline {
    flex-direction: column;
    gap: var(--space-md);
  }

  .form-inline input {
    min-width: 100%;
  }

  .share-inputs {
    flex-direction: column;
  }

  .share-inputs input {
    min-width: 100%;
  }

  .checkpoints {
    padding-left: clamp(1.5rem, 4vw, 2rem);
  }

  .checkpoints li {
    padding: clamp(0.75rem, 2vw, 1rem) clamp(0.75rem, 2vw, 1rem) clamp(0.75rem, 2vw, 1rem) clamp(1.5rem, 4vw, 2rem);
  }

  .checkpoints li::before {
    left: clamp(-15px, -4vw, -18px);
    top: clamp(15px, 3vw, 18px);
    width: clamp(12px, 3vw, 16px);
    height: clamp(12px, 3vw, 16px);
  }

  .checkpoints li:hover::before {
    width: clamp(16px, 4vw, 20px);
    height: clamp(16px, 4vw, 20px);
    left: clamp(-17px, -4.5vw, -20px);
  }
}

@media (max-width: 480px) {
  .share-view-container {
    padding: 1rem 0.75rem;
    min-height: calc(100vh - 2rem);
  }

  .share-card {
    padding: 1.5rem;
    border-radius: 1rem;
  }

  .share-header h2 {
    font-size: 1.5rem;
  }

  .order-id {
    font-size: 1rem;
    padding: 0.75rem 1rem;
  }

  .checkpoints {
    padding-left: 1.5rem;
  }

  .checkpoints li {
    padding: 0.75rem 0.75rem 0.75rem 1.5rem;
    margin-bottom: 1.25rem;
  }

  .checkpoints li::before {
    left: -14px;
    top: 16px;
    width: 10px;
    height: 10px;
  }

  .checkpoints li:hover::before {
    width: 14px;
    height: 14px;
    left: -16px;
  }

  .cp-text {
    font-size: 0.9rem;
  }

  .cp-time {
    font-size: 0.75rem;
  }

  .btn {
    padding: 0.75rem 1.25rem;
    font-size: 0.875rem;
  }

  .btn.small {
    padding: 0.5rem 1rem;
    font-size: 0.75rem;
  }
}