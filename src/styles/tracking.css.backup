/* ============================================
   TRACKING.CSS - Order Tracking & Management
   ============================================
   • Modern glass morphism design
   • Enhanced order tracking interface
   • Timeline/checkpoint visualization
   • Glass effect containers
   • Theme-integrated components
*/

/* ============================================
   CONTAINER & LAYOUT
   ============================================
*/

.tracking-container {
  animation: core-fade-in var(--motion-duration-medium) var(--ease-standard);
}

.tracking-page {
  padding: clamp(1.5rem, 4vw, 3rem) 0;
  animation: core-fade-in var(--motion-duration-medium) var(--ease-standard);
}

.tracking-header {
  margin-bottom: clamp(2rem, 5vw, 3rem);
  text-align: center;
}

.tracking-page h2 {
  font-size: clamp(2rem, 5vw, 3rem);
  font-weight: var(--font-weight-bold);
  color: var(--text-color);
  margin: 0 0 0.75rem 0;
  letter-spacing: var(--letter-spacing-tight);
}

.tracking-subtitle {
  color: var(--text-light);
  font-size: clamp(1rem, 2vw, 1.125rem);
  margin: 0;
  font-weight: 400;
}

.tracking-page h3 {
  font-size: clamp(1.5rem, 3.5vw, 2rem);
  font-weight: var(--font-weight-bold);
  color: var(--text-color);
  margin-bottom: clamp(1rem, 2vw, 1.5rem);
}

.tracking-page h4 {
  font-size: clamp(1.25rem, 3vw, 1.5rem);
  font-weight: var(--font-weight-semibold);
  color: var(--text-color);
  margin-bottom: clamp(1rem, 2vw, 1.5rem);
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.tracking-page h4::before {
  content: '';
  width: clamp(4px, 1vw, 6px);
  height: clamp(20px, 4vw, 28px);
  background: linear-gradient(135deg, 
    var(--primary-color) 0%, 
    var(--accent-color) 100%);
  border-radius: var(--radius-sm);
  flex-shrink: 0;
}

/* Page animations */
.animate-fade-in {
  animation: core-fade-in var(--motion-duration-medium) var(--ease-standard);
}

.animate-slide-up {
  animation: core-slide-up var(--motion-duration-medium) var(--ease-standard);
}

.animate-checkpoint-add {
  animation: checkpoint-add var(--motion-duration-long) var(--ease-standard);
}

@keyframes checkpoint-add {
  0% {
    opacity: 0;
    transform: translateX(-20px) scale(0.8);
  }
  60% {
    opacity: 0.8;
    transform: translateX(5px) scale(1.05);
  }
  100% {
    opacity: 1;
    transform: translateX(0) scale(1);
  }
}

/* ============================================
   SHARE VIEW CONTAINER
   ============================================
*/

.share-view-container {
  min-height: 100vh;
  padding: clamp(2rem, 5vw, 4rem) clamp(1rem, 4vw, 2rem);
  display: flex;
  align-items: flex-start;
  justify-content: center;
  background: linear-gradient(135deg, 
    rgba(0, 212, 170, 0.03) 0%,
    rgba(255, 51, 102, 0.02) 100%);
}

.share-card {
  width: 100%;
  max-width: 800px;
  background: rgba(30, 37, 56, 0.85);
  backdrop-filter: var(--backdrop-blur);
  -webkit-backdrop-filter: var(--backdrop-blur);
  border: 2px solid;
  border-color: #60A5FA;
  border-radius: 20px;
  padding: clamp(2rem, 4vw, 3rem);
  box-shadow: 
    0 20px 60px rgba(0, 0, 0, 0.3),
    0 0 0 1px rgba(255, 255, 255, 0.05),
    inset 0 1px 0 rgba(255, 255, 255, 0.1);
  animation: core-fade-in var(--motion-duration-medium) var(--ease-standard), borderGradientFlow 4s linear infinite;
  position: relative;
  overflow: hidden;
}

.share-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(0, 212, 170, 0.5) 50%, 
    transparent 100%);
}

.share-card.error {
  background: rgba(239, 68, 68, 0.1);
  border-color: rgba(239, 68, 68, 0.2);
  text-align: center;
}

.share-card.error h2 {
  color: var(--danger-color);
  margin-bottom: var(--space-lg);
}

.share-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: clamp(2rem, 4vw, 3rem);
  padding-bottom: 1.5rem;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.share-header h2 {
  font-size: clamp(1.75rem, 4vw, 2.5rem);
  font-weight: var(--font-weight-bold);
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin: 0;
}

/* ============================================
   ORDER DETAILS & STATUS
   ============================================
*/

.order-id {
  font-family: var(--font-mono);
  font-size: clamp(1.1rem, 2.5vw, 1.5rem);
  font-weight: var(--font-weight-bold);
  color: var(--primary-light);
  background: rgba(0, 212, 170, 0.1);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  padding: clamp(0.75rem, 2vw, 1rem) clamp(1rem, 3vw, 1.5rem);
  border-radius: var(--radius-lg);
  border: 1px solid rgba(0, 212, 170, 0.2);
  display: inline-block;
  margin-bottom: var(--space-lg);
  letter-spacing: var(--letter-spacing-wide);
  position: relative;
  overflow: hidden;
}

.order-id::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(255, 255, 255, 0.1) 50%, 
    transparent 100%);
  animation: shimmer 2s infinite;
}

.status-badge {
  padding: clamp(0.5rem, 1.5vw, 0.75rem) clamp(0.75rem, 2vw, 1.25rem);
  border-radius: var(--radius-full);
  font-size: clamp(0.75rem, 2vw, 0.875rem);
  font-weight: var(--font-weight-semibold);
  text-transform: uppercase;
  letter-spacing: var(--letter-spacing-wide);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.status-badge.active {
  background: rgba(0, 212, 170, 0.2);
  color: var(--primary-light);
  border-color: rgba(0, 212, 170, 0.3);
}

.status-badge.delivered {
  background: rgba(16, 185, 129, 0.2);
  color: var(--success-color);
  border-color: rgba(16, 185, 129, 0.3);
}

/* ============================================
   ORDER LIST & TABLE LAYOUT
   ============================================
*/

.order-list-container {
  animation: core-fade-in var(--motion-duration-medium) var(--ease-standard);
  margin-top: clamp(1.5rem, 3vw, 2.5rem);
}

.order-list-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: clamp(1.5rem, 3vw, 2rem);
  gap: var(--space-md);
  flex-wrap: wrap;
}

.order-list-header h3 {
  font-size: clamp(1.5rem, 3.5vw, 2rem);
  font-weight: var(--font-weight-bold);
  color: var(--text-color);
  margin: 0;
}

.order-count {
  color: var(--text-light);
  font-size: var(--font-size-base);
  margin: 0;
}

.order-table-wrapper {
  background: var(--card-bg);
  border: 2px solid #60A5FA;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: var(--card-shadow);
}

.order-table-header {
  display: grid;
  grid-template-columns: 1fr 2fr 1.5fr 1.2fr 1.2fr 1.2fr 0.8fr;
  gap: clamp(1rem, 2vw, 1.5rem);
  padding: clamp(1rem, 2vw, 1.5rem);
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.05), rgba(30, 58, 138, 0.05));
  border-bottom: 2px solid rgba(96, 165, 250, 0.2);
  font-weight: 600;
  font-size: clamp(0.875rem, 2vw, 0.95rem);
  color: #1E40AF;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  align-items: center;
}

.order-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
}

.order-list li {
  display: grid;
  grid-template-columns: 1fr 2fr 1.5fr 1.2fr 1.2fr 1.2fr 0.8fr;
  gap: clamp(1rem, 2vw, 1.5rem);
  padding: clamp(1rem, 2vw, 1.5rem);
  align-items: center;
  border-bottom: 1px solid rgba(96, 165, 250, 0.15);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
}

.order-list li:last-child {
  border-bottom: none;
}

.order-list li:hover {
  background: rgba(59, 130, 246, 0.06);
  border-bottom-color: #60A5FA;
}

.order-list li::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 2px;
  background: transparent;
  transition: all 0.3s ease;
}

.order-list li:hover::after {
  background: linear-gradient(90deg, transparent, #3B82F6, transparent);
}

/* Column styles */
.col-order-id {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.order-id-main {
  font-weight: 600;
  color: #1E40AF;
  font-family: var(--font-mono);
  font-size: clamp(0.9rem, 2vw, 1rem);
  letter-spacing: 1px;
}

.order-id-ref {
  font-size: clamp(0.75rem, 1.5vw, 0.825rem);
  color: var(--text-light);
  font-family: var(--font-mono);
}

.col-route {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: clamp(0.875rem, 2vw, 0.95rem);
  color: var(--text-color);
  flex-wrap: wrap;
}

.route-from,
.route-to {
  font-weight: 500;
}

.route-arrow {
  color: #60A5FA;
  margin: 0 0.25rem;
  font-weight: 600;
}

.col-service {
  font-size: clamp(0.875rem, 2vw, 0.95rem);
  color: var(--text-color);
}

.service-name {
  font-weight: 500;
}

.col-status {
  display: flex;
  justify-content: center;
}

.status-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 0.875rem;
  border-radius: 12px;
  font-size: clamp(0.75rem, 1.5vw, 0.825rem);
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  border: 2px solid;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.status-badge.in-transit {
  background: rgba(59, 130, 246, 0.1);
  border-color: #60A5FA;
  color: #1E40AF;
}

.status-badge.in-transit::before {
  content: '';
  display: inline-block;
  width: 0.5rem;
  height: 0.5rem;
  border-radius: 50%;
  background: #3B82F6;
  animation: pulse 2s ease-in-out infinite;
}

.status-badge.delivered {
  background: rgba(16, 185, 129, 0.1);
  border-color: rgba(16, 185, 129, 0.5);
  color: var(--success-color);
}

.status-badge.delivered::before {
  content: '✓';
  display: inline-flex;
  font-size: 0.7rem;
  font-weight: bold;
}

.status-badge.processing {
  background: rgba(251, 191, 36, 0.1);
  border-color: rgba(251, 191, 36, 0.5);
  color: #D97706;
}

.status-badge.processing::before {
  content: '';
  display: inline-block;
  width: 0.4rem;
  height: 0.4rem;
  border-radius: 50%;
  border: 2px solid #D97706;
  border-top-color: transparent;
  animation: spin 1s linear infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 0.8; }
  50% { opacity: 0.3; }
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.col-date {
  text-align: center;
  font-size: clamp(0.875rem, 2vw, 0.95rem);
  color: var(--text-color);
}

.date-value {
  display: block;
}

.col-amount {
  text-align: right;
  font-weight: 600;
  font-size: clamp(0.875rem, 2vw, 0.95rem);
  color: #1E40AF;
}

.amount-value {
  display: block;
}

.col-actions {
  display: flex;
  justify-content: center;
  align-items: center;
}

.action-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 50%;
  background: rgba(59, 130, 246, 0.1);
  border: 2px solid #60A5FA;
  color: #1E40AF;
  font-size: 1.2rem;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  text-decoration: none;
}

.action-btn:hover {
  background: rgba(59, 130, 246, 0.2);
  border-color: #3B82F6;
  box-shadow: 0 0 12px rgba(59, 130, 246, 0.3);
  transform: scale(1.1);
}

.action-btn.view-btn {
  display: inline-flex;
}

.eye-icon {
  display: inline-block;
}

/* Responsive adjustments */
@media (max-width: 1200px) {
  .order-table-header,
  .order-list li {
    grid-template-columns: 0.8fr 1.5fr 1fr 1rem;
    gap: 0.75rem;
  }
}

@media (max-width: 768px) {
  .order-table-wrapper {
    border-radius: 16px;
  }

  .order-table-header {
    display: none;
  }

  .order-list li {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    border: none;
    border-radius: 12px;
    margin-bottom: 1rem;
    border-bottom: none;
    background: rgba(59, 130, 246, 0.03);
    padding: 1.25rem;
    border: 1px solid rgba(96, 165, 250, 0.2);
  }

  .col-order-id,
  .col-route,
  .col-service,
  .col-status,
  .col-date,
  .col-amount,
  .col-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .col-order-id::before,
  .col-route::before,
  .col-service::before,
  .col-status::before,
  .col-date::before,
  .col-amount::before,
  .col-actions::before {
    content: attr(data-label);
    font-weight: 600;
    color: #1E40AF;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    flex-shrink: 0;
    margin-right: 0.5rem;
  }

  .col-order-id::before { content: 'Order ID'; }
  .col-route::before { content: 'Route'; }
  .col-service::before { content: 'Service'; }
  .col-status::before { content: 'Status'; }
  .col-date::before { content: 'Date'; }
  .col-amount::before { content: 'Amount'; }
  .col-actions::before { content: 'View'; }

  .status-badge {
    margin-left: auto;
  }
}

/* ============================================
   ORDER DETAIL DISPLAY
   ============================================
*/

.order-detail {
  background: rgba(30, 37, 56, 0.8);
  backdrop-filter: var(--backdrop-blur);
  -webkit-backdrop-filter: var(--backdrop-blur);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-lg);
  padding: clamp(1.5rem, 4vw, 2.5rem);
  box-shadow: 
    0 20px 60px rgba(0, 0, 0, 0.3),
    0 0 0 1px rgba(255, 255, 255, 0.05),
    inset 0 1px 0 rgba(255, 255, 255, 0.1);
  animation: core-fade-in var(--motion-duration-medium) var(--ease-standard);
  position: relative;
  overflow: hidden;
}

.order-detail::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(0, 212, 170, 0.5) 50%, 
    transparent 100%);
}

.order-header {
  margin-bottom: clamp(2rem, 4vw, 3rem);
  padding-bottom: 1.5rem;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.order-header h3 {
  font-size: clamp(1.5rem, 3vw, 2rem);
  font-weight: var(--font-weight-bold);
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: var(--space-md);
  letter-spacing: var(--letter-spacing-normal);
}

/* ============================================
   SHIPMENT PATH VISUALIZATION
   ============================================
*/

.shipment-path {
  display: flex;
  align-items: center;
  margin: clamp(2rem, 4vw, 3rem) 0;
  padding: clamp(1.5rem, 3vw, 2rem);
  background: rgba(0, 212, 170, 0.05);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border: 1px solid rgba(0, 212, 170, 0.1);
  border-radius: var(--radius-lg);
  position: relative;
  overflow: hidden;
}

.shipment-path::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(0, 212, 170, 0.3) 50%, 
    transparent 100%);
}

.origin-point,
.destination-point {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  flex-shrink: 0;
}

.point-marker {
  width: clamp(12px, 3vw, 20px);
  height: clamp(12px, 3vw, 20px);
  border-radius: 50%;
  margin-bottom: var(--space-sm);
  position: relative;
  box-shadow: 0 0 20px rgba(0, 212, 170, 0.5);
}

.point-marker.origin {
  background: var(--primary-color);
  border: 3px solid rgba(0, 212, 170, 0.3);
}

.point-marker.destination {
  background: var(--accent-color);
  border: 3px solid rgba(255, 51, 102, 0.3);
  box-shadow: 0 0 20px rgba(255, 51, 102, 0.5);
}

.path-line {
  flex: 1;
  height: 3px;
  background: rgba(255, 255, 255, 0.1);
  margin: 0 clamp(1rem, 3vw, 2rem);
  border-radius: var(--radius-full);
  position: relative;
  overflow: hidden;
}

.progress-indicator {
  height: 100%;
  background: linear-gradient(90deg, 
    var(--primary-color) 0%, 
    var(--accent-color) 100%);
  border-radius: var(--radius-full);
  width: 50%;
  transition: width var(--motion-duration-long) var(--ease-standard);
  position: relative;
}

.progress-indicator.complete {
  width: 100%;
}

.progress-indicator::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(255, 255, 255, 0.4) 50%, 
    transparent 100%);
  animation: shimmer 2s infinite;
}

.location {
  font-size: clamp(0.875rem, 2vw, 1rem);
  font-weight: var(--font-weight-semibold);
  color: var(--text-color);
  text-transform: uppercase;
  letter-spacing: var(--letter-spacing-wide);
}

/* Order info grid */
.order-info {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--space-lg);
  margin-bottom: var(--space-xl);
}

.order-info-item {
  background: rgba(0, 212, 170, 0.05);
  padding: var(--space-lg);
  border-radius: var(--radius);
  border-left: 3px solid var(--primary-color);
  transition: var(--transition);
}

.order-info-item:hover {
  background: rgba(0, 212, 170, 0.1);
  border-left-color: var(--primary-light);
}

.order-info-item strong {
  display: block;
  color: var(--text-muted);
  font-size: var(--font-size-sm);
  text-transform: uppercase;
  letter-spacing: var(--letter-spacing-wide);
  margin-bottom: var(--space-sm);
}

.order-info-item span {
  display: block;
  color: var(--text-on-dark);
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
}

.order-customer {
  font-weight: var(--font-weight-bold);
  font-size: var(--font-size-xl);
  color: var(--text-on-dark);
}

.route-arrow {
  display: inline-block;
  font-weight: var(--font-weight-bold);
  margin: 0 var(--space-sm);
  background: linear-gradient(135deg, var(--gradient-start) 0%, var(--gradient-end) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-size: var(--font-size-lg);
}

/* ============================================
   CHECKPOINTS / TIMELINE
   ============================================
*/

.checkpoints-section {
  margin-top: clamp(2rem, 4vw, 3rem);
  padding-top: 1.5rem;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.checkpoints-section h4 {
  font-size: clamp(1.25rem, 3vw, 1.5rem);
  font-weight: var(--font-weight-bold);
  color: var(--text-color);
  margin-bottom: clamp(1.5rem, 3vw, 2rem);
  display: flex;
  align-items: center;
  gap: var(--space-md);
}

ol.checkpoints,
.checkpoints {
  list-style: none !important;
  list-style-image: none !important;
  list-style-position: initial !important;
  list-style-type: none !important;
  position: relative;
  padding-left: clamp(2rem, 4vw, 2.5rem);
  margin-bottom: var(--space-xl);
}

/* Hide list item markers */
.checkpoints > div::marker {
  display: none !important;
}

/* Timeline line */
.checkpoints::before {
  content: '';
  position: absolute;
  left: clamp(10px, 2vw, 15px);
  top: 8px;
  bottom: 0;
  width: 2px;
  background: linear-gradient(180deg, 
    var(--primary-color) 0%, 
    rgba(0, 212, 170, 0.3) 50%,
    rgba(255, 51, 102, 0.2) 100%);
  border-radius: var(--radius-full);
}

.checkpoints li {
  margin-bottom: clamp(1.5rem, 3vw, 2rem);
  position: relative;
  padding-left: clamp(1rem, 2vw, 1.5rem);
  background: rgba(0, 212, 170, 0.03);
  backdrop-filter: blur(4px);
