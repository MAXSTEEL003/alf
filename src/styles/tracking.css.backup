  padding: clamp(1rem, 2vw, 1.5rem) clamp(1rem, 2vw, 1.5rem) clamp(1rem, 2vw, 1.5rem) clamp(2rem, 4vw, 3rem);
  animation: core-slide-in-left var(--motion-duration-medium) var(--ease-standard);
  animation-fill-mode: both;
  transition: all var(--motion-duration-medium) var(--ease-standard);
}

.checkpoints > div {
  margin-bottom: clamp(1.5rem, 3vw, 2rem);
  position: relative;
  padding-left: clamp(1rem, 2vw, 1.5rem);
  background: rgba(0, 212, 170, 0.03);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
  border: 1px solid rgba(0, 212, 170, 0.1);
  border-radius: var(--radius);
  padding: clamp(1rem, 2vw, 1.5rem) clamp(1rem, 2vw, 1.5rem) clamp(1rem, 2vw, 1.5rem) clamp(2rem, 4vw, 3rem);
  animation: core-slide-in-left var(--motion-duration-medium) var(--ease-standard);
  animation-fill-mode: both;
  transition: all var(--motion-duration-medium) var(--ease-standard);
}

.checkpoints li:nth-child(1) { animation-delay: 0.1s; }
.checkpoints li:nth-child(2) { animation-delay: 0.2s; }
.checkpoints li:nth-child(3) { animation-delay: 0.3s; }
.checkpoints li:nth-child(4) { animation-delay: 0.4s; }
.checkpoints li:nth-child(5) { animation-delay: 0.5s; }
.checkpoints li:nth-child(n+6) { animation-delay: 0.6s; }

.checkpoints > div:nth-child(1) { animation-delay: 0.1s; }
.checkpoints > div:nth-child(2) { animation-delay: 0.2s; }
.checkpoints > div:nth-child(3) { animation-delay: 0.3s; }
.checkpoints > div:nth-child(4) { animation-delay: 0.4s; }
.checkpoints > div:nth-child(5) { animation-delay: 0.5s; }
.checkpoints > div:nth-child(n+6) { animation-delay: 0.6s; }

.checkpoints li:hover {
  background: rgba(0, 212, 170, 0.08);
  border-color: rgba(0, 212, 170, 0.2);
  transform: translateX(4px);
}

.checkpoints > div:hover {
  background: rgba(0, 212, 170, 0.08);
  border-color: rgba(0, 212, 170, 0.2);
  transform: translateX(4px);
}

/* Checkpoint circle/dot */
.checkpoints li::before {
  content: '';
  display: block;
  position: absolute;
  left: clamp(-18px, -3vw, -22px);
  top: clamp(18px, 3vw, 24px);
  width: clamp(14px, 3vw, 18px);
  height: clamp(14px, 3vw, 18px);
  border-radius: 50%;
  background: var(--primary-color);
  border: 3px solid rgba(30, 37, 56, 1);
  box-shadow: 
    0 0 0 2px rgba(0, 212, 170, 0.3),
    0 0 20px rgba(0, 212, 170, 0.6);
  transition: all var(--motion-duration-medium) var(--ease-standard);
  z-index: 2;
  font-size: 0;
  line-height: 0;
}

/* Checkpoint circle/dot - Animated */
/* Checkpoint circle/dot - old approach removed, using .cp-text::before instead */

.checkpoints li:hover::before {
  width: clamp(18px, 4vw, 24px);
  height: clamp(18px, 4vw, 24px);
  left: clamp(-20px, -4vw, -26px);
  box-shadow: 
    0 0 0 3px rgba(0, 212, 170, 0.4),
    0 0 30px rgba(0, 212, 170, 0.8);
}

.cp-text:hover::before {
  width: 28px;
  height: 28px;
  font-size: 15px;
  background: linear-gradient(135deg, #00E5BB 0%, #40FFD4 100%);
  box-shadow: 
    0 0 0 3px rgba(0, 212, 170, 0.5),
    0 0 20px rgba(0, 212, 170, 0.9),
    0 0 36px rgba(0, 212, 170, 0.6),
    inset 0 2px 4px rgba(255, 255, 255, 0.3);
  transform: scale(1.15);
}

/* Enhanced keyframe animations for checkpoints */
@keyframes checkpoint-check {
  0% {
    transform: scale(0.3) translateY(-8px);
    opacity: 0;
    filter: blur(4px);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
    opacity: 1;
    filter: blur(0);
  }
}

@keyframes glow-pulse {
  0%, 100% {
    box-shadow: 
      0 0 0 2px rgba(0, 212, 170, 0.4),
      0 0 12px rgba(0, 212, 170, 0.6),
      0 0 24px rgba(0, 212, 170, 0.3);
  }
  50% {
    box-shadow: 
      0 0 0 3px rgba(0, 212, 170, 0.6),
      0 0 20px rgba(0, 212, 170, 0.9),
      0 0 40px rgba(0, 212, 170, 0.5);
  }
}

.cp-text {
